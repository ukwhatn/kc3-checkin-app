<% content_for(:title, "#{@event.name}/#{@timetable.name}") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 mt-3 mx-auto text-center">
      <%= link_to "前のページに戻る", admin_event_path(@event) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mt-3 mx-auto">
      <div class="d-flex flex-wrap gap-2">
        <% @timetable.contents.each do |content| %>
          <div class="flex-grow-0 flex-shrink-0 w-100 bg-white rounded-2 p-3">
            <div class="fw-bold fs-5">
              <%= link_to content.name, admin_event_timetable_content_path(@event, @timetable, content) %>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-secondary">
                <%= link_to "実施詳細", content.introduction_url, target: "_blank" %>
              </div>
              <div class="text-end">
                <%= link_to "編集", edit_admin_event_timetable_content_path(@event, @timetable, content), class: "btn btn-outline-secondary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-4 mt-5 mb-3 mx-auto text-center">
      <div class="pb-2 border-bottom border-1">
        新規コンテンツ
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= render partial: "admin/contents/components/form", locals: { model: @new_content, path: admin_event_timetable_contents_path(@event, @timetable) } %>
    </div>
  </div>
</div>